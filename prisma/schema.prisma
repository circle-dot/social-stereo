generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String?
  name      String?
  bio       String?
  wallet    String   @unique
  twitter   String?
  farcaster String?
  rankScore Float    @default(0)
  createdAt DateTime @default(now())
  podUrl    String?
  Zupass    Zupass[]
}

model Zupass {
  userId         String
  nullifier      String
  attestationUID String   @unique
  createdAt      DateTime @default(now())
  category       String?
  subcategory    String?
  credentialType String?
  platform       String?
  zupassEmail    String?
  user           User     @relation(fields: [userId], references: [id])
}

model Music {
  id                 String   @id @default(uuid())
  spotify_id         String   @unique
  title              String
  artist             String
  album              String
  imageUrl           String
  spotifyUrl         String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  rank               Int?
  vouches            Int?     @default(0)
  insertionTimestamp String?
}
